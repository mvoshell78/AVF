var api = require("api");
var cloudModule = require("ti.cloud");

cloudModule.debug = true;

var userId;

var loginCloud = function(){
	cloudModule.Users.login({
		login : "com.voshell.taco",
		password : "12345"
	}, function(e) {
		if (e.success) {
			console.log("cloud working!");
			api.getJson();
	
		} else {
			alert ("error " + e.message);
		}
	});
};

